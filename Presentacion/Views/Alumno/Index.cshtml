@model IEnumerable<Entidades.Alumnos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Alumno", "Create",null, new { @class = "btn btn-success btn-sm" })
</p>
<table class="table table-striped table-hover" >
    <tr>
        <th scope="col">
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.primerApellido)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.segundoApellido)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.correo)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.idEstadoOrigen)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.idEstatus)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.primerApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.segundoApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estados.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstatusAlumnos.Nombre)
            </td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-warning btn-sm" })</td>
            <td>@Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-primary btn-sm" })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-sm" })</td>
        </tr>
    }

</table>